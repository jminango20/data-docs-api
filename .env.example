# ==========================================
# SERVER
# ==========================================
PORT_API=3300
APP_HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# ==========================================
# CASSANDRA
# ==========================================
# Modo: local (dev) ou astra (prod)
CASSANDRA_MODE=local

# Local Cassandra (Docker)
IPS_CLUSTER=localhost
DATACENTER=datacenter1
CASSANDRA_SUPERUSER=cassandra
CASSANDRA_SUPERUSER_PASSWORD=cassandra
BLOCKCHAIN_USERNAME=blockchain
BLOCKCHAIN_PASSWORD=blockchainpass

# Astra Cassandra (Cloud - Produção)
ASTRA_SECURE_BUNDLE_PATH=./secure-connect-db-trace-tracker.zip
ASTRA_CLIENT_ID=your_client_id_here
ASTRA_CLIENT_SECRET=your_client_secret_here
ASTRA_KEYSPACE=trace_tracker

# ==========================================
# ELASTICSEARCH
# ==========================================
ELASTIC_HOST=http://localhost:9200
ELASTIC_INDEXNAME=documents
ELASTIC_PASS=your_elastic_password
ELASTIC_HTTPS_MODE=false

# ==========================================
# MTLS (Desabilitado por enquanto)
# ==========================================
MTLS=false

# ==========================================
# API PREFIX 
# ==========================================
PREFIX_API=